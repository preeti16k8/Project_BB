<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center"
    android:id="@+id/ll_mixture"
    android:background="@drawable/itembackground">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/mixtureList_Image"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/mixtureName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="MIXTURE"

        android:layout_gravity="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mixtureList_Name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u20B9"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mixturePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="700"
            android:textColor="#ffff"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>