<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/barebones_main_image_grad">

<LinearLayout
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="2">
    <ImageView
        android:id="@+id/imageView_ItmPrice"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_weight=".90"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Image Name"
        android:id="@+id/tv_liquorimgname"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_weight=".10"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Min Price"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="Max Price"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18dp" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="BuyNowPrice"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18dp" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_liquorimgPriceMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text=""
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_liquorimgPriceMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text=""
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="16dp" />

           <!-- <TextView
                android:id="@+id/tv_liquorimgPriceBuyNw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="200"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="16dp" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_imgpricebuynw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="BuyNow"
                android:textColor="#000"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_imgpricebidnw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bid NOw"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button_border"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
