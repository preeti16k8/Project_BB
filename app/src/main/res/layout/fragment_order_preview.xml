<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/barebones_main_image_grad"
    android:weightSum="5"
    tools:context="com.kre8tives.barebones.Fragments.OrderPreviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".45"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="1dp"
            android:background="#11ffffff"
            android:orientation="horizontal"
            android:weightSum="5.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="Item"
                android:textAlignment="center"
                android:textColor="#FFDEAD"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="ActualPrice"
                android:textAlignment="center"
                android:textColor="#FFDEAD"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.6"
                android:gravity="center"
                android:text="Qty"
                android:textAlignment="center"
                android:textColor="#FFDEAD"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="SubTotal"
                android:textAlignment="center"
                android:textColor="#FFDEAD"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bidConfirmRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
        <!--  <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/btn_deletecart"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:layout_gravity="center"
            android:background="@drawable/deletecart"/>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:background="#44ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="2.35">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Total"
            android:textColor="#FFDEAD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            tools:ignore="HardcodedText,NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20B9"
                android:textColor="#FFDEAD"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights,RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txt_grandtotal"
                android:text="0"
                android:textColor="#FFDEAD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif-thin"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="3"
        android:layout_weight="2.15"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/bidConf_btn_addmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/newbuttonstyle"
            android:fontFamily="sans-serif-thin"
            android:text="ADD MORE"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,NestedWeights" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newbuttonstyle"
            android:text="Clear Cart"
            android:id="@+id/btn_deletecart"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newbuttonstyle"
            android:text="PLACE ORDER"
            android:id="@+id/bidConf_btn_order"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            tools:ignore="HardcodedText" />


    </LinearLayout>




</LinearLayout>
