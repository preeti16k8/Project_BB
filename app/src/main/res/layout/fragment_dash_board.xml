<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@drawable/barebones_main_image_grad">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
         android:background="@drawable/itembackground"
        android:id="@+id/ll_drink">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/Imgview_drink"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_weight=".40"
            android:layout_marginTop="20dp"
            android:background="@drawable/alcohol"/>

        <TextView
            android:id="@+id/foodText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DRINKS"
            android:gravity="center"
            android:textColor="#FFDEAD"
            android:textStyle="bold"
            android:layout_weight="1.60"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_food"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/itembackground"
        android:weightSum="2">

        <ImageView
            android:id="@+id/Imgview_food"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="25dp"
            android:layout_weight=".40"
            android:background="@drawable/burgerfood" />

        <TextView
            android:id="@+id/drinksText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1.60"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="FOOD"
            android:textColor="#FFDEAD"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

