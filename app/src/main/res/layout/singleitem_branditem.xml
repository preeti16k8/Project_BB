<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="290dp"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center"
    android:background="@drawable/itembackground">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/brandItem_Image"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/itembackground"
        android:id="@+id/ll_Prices">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="Min Price"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="Max Price"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_brandimgPriceMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text=""
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_brandimgPriceMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text=""
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/brandItem_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barnd Name"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/priceothers"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white"
            android:text="1234"
            android:textStyle="bold"
            android:textSize="15dp"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
