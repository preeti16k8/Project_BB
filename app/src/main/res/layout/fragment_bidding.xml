<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/barebones_main_image_grad"
    tools:context="com.kre8tives.barebones.Fragments.BiddingFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have Selected"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bid_selectedItem"
        android:text="GENTLEMAN JACK"
        android:textColor="#ffff"
        android:padding="8dp"
        android:minLines="2"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="40sp"

        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bid_range"
        android:text="Bid Range"
        android:textColor="#ffff"
        android:padding="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="\u20B9"
                android:textColor="#ffff"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bid_minBidPrice"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:layout_gravity="center"
                android:text="200"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="-"
            android:textColor="#ffff"
            android:layout_marginLeft="5dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"

            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bid_bidNowPrice"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="200"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="10dp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </LinearLayout>


    </LinearLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1CB75"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="#11ffffff"
        tools:ignore="DisableBaselineAlignment,RtlHardcoded">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            tools:ignore="ExtraText,NestedWeights">

            <EditText
                android:id="@+id/bid_et_makeoffer"
                android:layout_width="100dp"
                android:maxLength="5"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:hint="Make your offer"
                android:inputType="phone"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#ffff"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_clear_black"
                android:layout_marginLeft="10dp"
                tools:ignore="RtlHardcoded,UnusedAttribute" />

            <Spinner
                android:id="@+id/categoryList"
                android:layout_width="90dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:spinnerMode="dropdown"
                android:gravity="right"

                />

           <!-- android:fontFamily="sans-serif-thin"-->
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:text="\u20B9"
                android:textColor="#ffff"
                android:textSize="16sp"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/bid_txt_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:textColor="#ffff"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>


      <!--  <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MakeYour Offer"
            android:layout_gravity="center_vertical"
            android:textColorHint="#fff"></EditText>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"/>-->
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        tools:ignore="InefficientWeight">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/newbuttonstyle"
            android:text="Buy Now"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:id="@+id/buyNowBidding"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>
</LinearLayout>
