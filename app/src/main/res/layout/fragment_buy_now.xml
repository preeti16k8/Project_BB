<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/barebones_main_image_grad"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have Selected"
            android:minLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Item \n Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/buyNow_itemName"
        android:textSize="50sp"
        android:minLines="2"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffff"
        android:layout_gravity="center"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1CB75"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="3"
        android:background="#11ffffff"
        tools:ignore="DisableBaselineAlignment,RtlHardcoded">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            tools:ignore="ExtraText,NestedWeights">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/txtView_Price"
                android:textSize="15sp"
                android:background="@null"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_vertical"
                android:text="Price"
                android:gravity="center"
                android:textColorHint="#fff"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="1.3"
                android:backgroundTint="#ffff"
                android:fontFamily="sans-serif-thin"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_clear_black"
                android:layout_marginLeft="5dp"
                tools:ignore="RtlHardcoded,UnusedAttribute" />
            <Spinner
                android:id="@+id/categoryList"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20B9"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:paddingLeft="25dp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buyNow_totalPrice"
                android:text=""
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-thin"
                android:layout_gravity="center_vertical"
                android:textColor="#ffff"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>


        <!--  <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="MakeYour Offer"
              android:layout_gravity="center_vertical"
              android:textColorHint="#fff"></EditText>

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="*"
                  android:textColor="#fff"
                  android:layout_marginLeft="5dp"
                  android:layout_gravity="center_vertical"
                  android:textSize="30sp"/>


          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2"
              android:textColor="#fff"
              android:layout_marginLeft="5dp"
              android:layout_gravity="center_vertical"
              android:textSize="25sp"/>-->
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        tools:ignore="InefficientWeight">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/newbuttonstyle"
            android:text="Buy Now"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:id="@+id/buyNowBidding"
            tools:ignore="HardcodedText,UnusedAttribute" />

    </LinearLayout>


</LinearLayout>
