<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:orientation="vertical"
    android:background="#1b1904"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/expaitemnamel"
            android:layout_width="120dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:fontFamily="sans-serif-thin"
            android:text="Name"
            android:textColor="#ffdead"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/expaitemquantityl"
            android:layout_width="40dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:fontFamily="sans-serif-thin"
            android:text="Quantity"
            android:textColor="#ffdead"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/expaitempricel"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:fontFamily="sans-serif-thin"
            android:text="Price"
            android:textColor="#ffdead"
            android:textSize="10sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/expaitemtotall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="Sub Total"
            android:textColor="#ffdead"
            android:textSize="10sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/expaitemname"
        android:layout_width="120dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:fontFamily="sans-serif-thin"
        android:text="6456"
        android:textColor="#ffdead"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/expaitemquantity"
        android:layout_width="35dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:fontFamily="sans-serif-thin"
        android:text="100"
        android:textColor="#ffdead"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/expaitemprice"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:fontFamily="sans-serif-thin"
        android:text="1000"
        android:textColor="#ffdead"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/expaitemtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="14000"
        android:textColor="#ffdead"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
    </LinearLayout>


</LinearLayout>