<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@drawable/orders_stroke"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/expaorderId"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-thin"
        android:text="6456"
        android:textColor="#ffdead"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/expaorderDate"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-thin"
        android:text="23/11/17"
        android:textColor="#ffdead"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expaorderStatus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="18dp"
        android:fontFamily="sans-serif-thin"
        android:text="Rejected"
        android:textColor="#ffdead"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/expaorderAmount"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="14000"
        android:textColor="#ffdead"
        android:textSize="18sp"
         />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_arrow"
            />

</LinearLayout>